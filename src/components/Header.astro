---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="site-header">
	<div class="header-container">
		<nav>
			<div class="logo-container">
				<a href="/" class="logo-link">
					<h2>{SITE_TITLE}</h2>
				</a>
			</div>
			<div class="internal-links">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				<HeaderLink href="/blog">Resources</HeaderLink>
				<HeaderLink href="/survey" class="cta-button">Assessment</HeaderLink>
			</div>
		</nav>
	</div>
</header>
<style>
	header.site-header {
		margin: 0;
		padding: 0;
		background-color: var(--primary);
		box-shadow: var(--box-shadow);
	}
	
	.header-container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1.5em;
	}
	
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0.75em 0;
	}
	
	.logo-container {
		display: flex;
		align-items: center;
	}
	
	.logo-link {
		display: flex;
		align-items: center;
		text-decoration: none;
	}
	
	.logo {
		height: 40px;
		width: auto;
		margin-right: 10px;
		border-radius: 4px;
	}
	
	h2 {
		margin: 0;
		font-size: 1.5em;
		font-family: 'Playfair Display', serif;
		color: white;
	}

	.internal-links {
		display: flex;
		align-items: center;
	}
	
	nav a {
		padding: 0.5em 1em;
		color: white;
		border-bottom: 2px solid transparent;
		text-decoration: none;
		transition: all 0.3s ease;
		font-weight: 500;
	}
	
	nav a:hover {
		border-bottom-color: white;
	}
	
	nav a.active {
		text-decoration: none;
		border-bottom-color: white;
		font-weight: 700;
	}
	
	.cta-button {
		background-color: var(--secondary);
		color: white;
		padding: 0.5em 1.25em;
		border-radius: 4px;
		margin-left: 0.5em;
		border: none;
		transition: background-color 0.3s ease, transform 0.2s ease;
	}
	
	.cta-button:hover {
		background-color: #708e9c;
		transform: translateY(-2px);
		border-bottom-color: transparent;
	}
	
	.cta-button.active {
		background-color: #708e9c;
		border-bottom-color: transparent;
	}

	@media (max-width: 720px) {
		nav {
			flex-direction: column;
			gap: 1em;
			padding: 1em 0;
		}
		
		.internal-links {
			flex-wrap: wrap;
			justify-content: center;
			gap: 0.5em;
		}
		
		.cta-button {
			margin: 0.5em 0 0 0;
		}
	}
</style>
