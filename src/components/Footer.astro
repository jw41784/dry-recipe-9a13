---
const today = new Date();
---

<footer>
	<div class="footer-container">
		<div class="footer-content">
			<div class="footer-branding">
				<a href="/" class="footer-logo">
					<span class="logo-text">eudex.io</span>
				</a>
				<p class="tagline">Empowering Remote Leaders to Succeed</p>
			</div>
			
			<div class="footer-links">
				<div class="link-group">
					<h4>Site</h4>
					<ul>
						<li><a href="/">Home</a></li>
						<li><a href="/about">About</a></li>
						<li><a href="/survey">Assessment</a></li>
						<li><a href="/blog">Resources</a></li>
					</ul>
				</div>
				
				<div class="link-group">
					<h4>Connect</h4>
					<ul>
						<li><a href="mailto:contact@eudex.io">Contact Us</a></li>
						<li><a href="#" target="_blank">LinkedIn</a></li>
						<li><a href="#" target="_blank">Twitter</a></li>
					</ul>
				</div>
			</div>
		</div>
		
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} Eudexio. All rights reserved.</p>
			<p class="footer-note">
				<a href="#">Privacy Policy</a> â€¢ <a href="#">Terms of Service</a>
			</p>
		</div>
	</div>
</footer>

<style>
	footer {
		background: var(--primary);
		color: #fff;
		padding: 60px 20px 30px;
		font-size: 0.9rem;
		margin-top: 80px;
	}
	
	.footer-container {
		max-width: 1200px;
		margin: 0 auto;
	}
	
	.footer-content {
		display: flex;
		flex-direction: column;
		gap: 40px;
		margin-bottom: 50px;
	}
	
	.footer-branding {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}
	
	.footer-logo {
		display: flex;
		align-items: center;
		text-decoration: none;
		color: white;
		margin-bottom: 10px;
	}
	
	.logo-text {
		font-family: 'Playfair Display', serif;
		font-size: 1.5rem;
	}
	
	.tagline {
		opacity: 0.8;
		margin: 0;
	}
	
	.footer-links {
		display: flex;
		flex-wrap: wrap;
		gap: 40px;
	}
	
	.link-group h4 {
		color: white;
		margin-bottom: 15px;
		font-size: 1.1rem;
	}
	
	.link-group ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}
	
	.link-group li {
		margin-bottom: 10px;
	}
	
	.link-group a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
		transition: color 0.3s ease;
	}
	
	.link-group a:hover {
		color: white;
		text-decoration: underline;
	}
	
	.footer-bottom {
		padding-top: 30px;
		border-top: 1px solid rgba(255, 255, 255, 0.1);
		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;
	}
	
	.footer-bottom p {
		margin: 0 0 10px 0;
	}
	
	.footer-note a {
		color: rgba(255, 255, 255, 0.8);
		text-decoration: none;
	}
	
	.footer-note a:hover {
		color: white;
		text-decoration: underline;
	}
	
	@media (min-width: 768px) {
		.footer-content {
			flex-direction: row;
			justify-content: space-between;
		}
		
		.footer-branding {
			max-width: 300px;
		}
		
		.footer-bottom {
			flex-direction: row;
			justify-content: space-between;
		}
	}
</style>